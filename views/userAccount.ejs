<%- include("./partials/blogs-header") %>


<section class="sect">

  <div class="container mt-5">
    
    <div class="card" style="width: 100%;">
      <div class="card-body">
        
        <h1 class="card-title text-center">Hello, <%= user.username %></h1>
        <h3>Update Your Profile</h3>
        
        <form action="/updateUserAccount?id=<%= user._id %>" method="POST">
          
          <br>
          <label for="exampleInputUsername1">Username:</label>
          <input type="text" class="form-control" name="newUsername" id="exampleInputUsername1" placeholder="Older: <%= user.username %>"><br>
          
          <label class="mt-3" for="exampleInputEmail1">Email:</label>
          <input type="email" class="form-control" name="newEmail" id="exampleInputEmail1" placeholder="Older: <%= user.email %>"><br>
          
          <div class="contactbutton m-5">
            <button type="submit" class="btn btn-primary">Update Details</button>
          </div>
          
        </form>
        
        
        <form action="/updateUserPassword?id=<%= user._id %>" method="POST">
          
          <label for="exampleInputPassword0">Old Password:</label>
          <input type="password" class="form-control" name="oldPassword" id="exampleInputPassword0" placeholder="Old Password">
          
          <label class="mt-3" for="exampleInputPassword1">New Password:</label>
          <input type="password" class="form-control" name="newPassword" id="exampleInputPassword1" placeholder="Password">
          
          <label class="mt-3" for="exampleInputPassword2">Re-Enter New Password:</label>
          <input type="password" class="form-control" name="reEenteredPassword" id="exampleInputPassword2" placeholder="Re-Enter New Password">
          
          <div class="contactbutton m-5">
            <button type="submit" class="btn btn-primary">Update Password</button>
          </div>
          
        </form>
        
      </div>
    </div>
    
  </div>
  
  <div class="last-blog"></div>
</section>

<%- include("./partials/footer")%>
  